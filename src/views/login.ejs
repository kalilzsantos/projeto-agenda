<%- include('includes/head'); %>
<%- include('includes/navbar'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-2">
      <h1 class="text-center">Acesse sua Agenda!</h1>
      <p class="text-center lead">Abaixo estão os modos para entrar:</p>

      <%- include('includes/messages'); %>

      <div class="row">
        <div class="col-lg text-center">
          <h4>Faça seu cadastro:</h4>
          <form class="form-cadastro" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>Email:</label>
              <input type="email" class="form-control" name="email" placeholder="Seu Email">
            </div>
            <div class="form-group">
              <label>Senha:</label>
              <input type="password" class="form-control" name="password" placeholder="Sua Senha">
            </div>
            <button type="submit" class="btn btn-primary">Cadastrar</button>
          </form>
        </div>

        <div class="col-lg text-center">
          <h4>Faça seu login:</h4>
          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>Email:</label>
              <input type="email" class="form-control" name="email" placeholder="Seu Email">
            </div>
            <div class="form-group">
              <label>Senha:</label>
              <input type="password" class="form-control" name="password" placeholder="Sua Senha">
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer'); %>
